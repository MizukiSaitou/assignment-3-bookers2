<%= form_with model:@book, local:true do |f| %>

<div class="form-group">
<label for = "bookName">本のタイトル</label>
<%= f.text_field :title, autofocus: true, id:"bookName"%>
</div>

<div class="form-group">
<label for = "bookBody">感想</label>
<%= f.text_field :body, autofocus: true, id:"bookBody" %>
</div>

<div class="form-group">
<label for = "bookCategory">分類</label>
<%= f.text_field :category, autofocus: true, id:"bookCategory" %>
</div>

  <script>
    $('#star-rate-<%= @book.id %>').raty({
      size: 20,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half: true,
      readOnly: true,
  　   score: '<%= @book.rate %>',
    });
  </script>
     <%= @book.rate %>

<div class="form-group">
<%= f.submit"Update Book", class:"btn btn-success" %>
</div>

