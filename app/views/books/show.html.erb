<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
   <%= render 'books/book', user: @user, book: @book_new %>
  </div>

<div class="col-md-8 offset-md-1">
<h2>Book details</h2>
<table class = "table">
    <tbody>
      <tr>
         <td>
          <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %><br><%= @user.name %>
          <% end %>
         </td>
         <td>
          <%= link_to @book.title, book_path %>
         </td>
         <td>
          <%= @book.body %>
         </td>
         <% if @book.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@book), method: :delete do %>
              ♥<%= @book.favorites.count %>
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(@book), method: :post do %>
              ♡<%= @book.favorites.count %>
            <% end %>
          </td>
        <% end %>
        <td>コメント数：<%= @book.book_comments.count %><td>
         <% if user_signed_in? && current_user.id == @book.user_id %>
         <td>
          <%= link_to"Edit", edit_book_path, class:"btn btn-sm btn-success edit_book" %>
         </td>
         <td>
          <%= link_to"Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-sm btn-danger destroy_book" %>
          </td>
          <% end %>
      </tr>
    </tbody>
 </table>

     <table>
      <tbody>
         <div class="comments">
          <% @book.book_comments.each do |book_comment| %>
          <tr>
          <td>
          <%= link_to user_path(@user) do %>
          <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %><br><%= book_comment.user.name %>
          <% end %>
          </td>
          <td><%= book_comment.comment %></td>

            <% if book_comment.user == current_user %>
             <td>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-danger"  %>
             </td>
             <% end %>
             </tr>
           <% end %>
      </tbody>
     </table>
          <div class="new-comment">
            <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
            <%= f.text_area :comment, cols:'70', rows:'5'%>
            <%= f.submit "送信" %>
            <% end %>
          </div>
          </div>

    </div>
   </div>
</div>




