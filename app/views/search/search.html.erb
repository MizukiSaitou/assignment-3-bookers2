<h1>Books search for '<%= @value %>'</h1>

<table class="table">
    <% if @model == "book" %>
        <thead>
            <tr>
                <th></th>
                <th>本のタイトル</th>
                <th>感想</th>
            </tr>
        </thead>
     <% @datas.each do |book| %>
        <tbody>
            <tr>
                <td>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
        </tbody>
      <% end %>

    <% elsif @model == "user"%>
        <thead>
            <tr>
                <th></th>
                <th>本のタイトル</th>
                <th>感想</th>
            </tr>
        </thead>
        <% @datas.each do |user| %>
        <tbody>
            <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
                </td>
                <td><%= link_to user_path(user) do %><%= user.name %><% end %></td>
                <td><%= user.introduction %></td>
            </tr>
        </tbody>
        <% end %>
    <% end %>
</table>
