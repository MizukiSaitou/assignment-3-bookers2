<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css"> 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <bodyã€€class="d-flex flex-column vh-100">
    <header >
    <h2>Bookers</2>
    <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
    <li class="nav-item">
      <i class="fas fa-home"><%= link_to"Home", user_path(current_user), class: 'nav-link text-dark' %></i>
    </li>
    <li class="nav-item">
      <i class="fas fa-users"> <%= link_to"Users", users_path, class: 'nav-link text-dark' %></i>
    </li>
    <li>
      <i class="fas fa-book-open"><%= link_to"Books", books_path, class: 'nav-link text-dark' %></i>
    </li>
    <li class="nav-item">
      <i class="fas fa-sign-out-alt"><%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %></i>
    </li>
    <% else %>
     <li class="nav-item">
      <i class="fas fa-home"><%= link_to"Home", root_path, class: 'nav-link text-dark' %></i>
    </li>
    <li class="nav-item">
      <i class="fas fa-link"> <%= link_to"About", homes_about_path, class: 'nav-link text-dark' %></i>
     </li>
     <li class="nav-item">
       <i class="fas fa-user-plus"><%= link_to"sign up", new_user_registration_path, class: 'nav-link text-dark' %></i>
    </li>
    <li class="nav-item">
      <i class="fas fa-sign-in-alt"><%= link_to"login", new_user_session_path, class: 'nav-link text-dark' %></i>
    </li>

  <% end %>

   </ul>
   </div>
   </div>
   </nav>
  </header>

  <main>
    <%= yield %>
  </main>

  <footer class="bg-dark text-white pt-5 pb-4">
    <p>CopyRight Infratop.inc</p>
  </footer>
  </body>
</html>
